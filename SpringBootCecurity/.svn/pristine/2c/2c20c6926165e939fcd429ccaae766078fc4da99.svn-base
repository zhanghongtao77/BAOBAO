<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xueqing.demo.springbootsecurity.mapper.UserMapper">
	
	<select id="getUserInfo" resultType="com.xueqing.demo.springbootsecurity.bean.User">
		select * from user where username=#{username} and password=#{password}
	</select>
	<select id="getAllUsers" resultType="com.xueqing.demo.springbootsecurity.bean.User">
		select * from user
	</select>

	<select id="loadUserByUsername" resultType="com.xueqing.demo.springbootsecurity.bean.User">
		select * from user where username=#{username}
	</select>


</mapper>