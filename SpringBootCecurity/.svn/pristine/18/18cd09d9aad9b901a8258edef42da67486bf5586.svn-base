<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>


    <script type="text/javascript" src="js/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="angularjs/angular-animate.min.js"></script>
    <script type="text/javascript" src="angularjs/angular.min.js"></script>
    <script type="text/javascript" src="angularjs/angular-route.min.js"></script>


    <!--所有类型-->


    <!-- ================= Favicon ================== -->
    <!-- Standard -->
    <link rel="shortcut icon" href="http://placehold.it/64.png/000/fff">
    <!-- Retina iPad Touch Icon-->
    <link rel="apple-touch-icon" sizes="144x144" href="http://placehold.it/144.png/000/fff">
    <!-- Retina iPhone Touch Icon-->
    <link rel="apple-touch-icon" sizes="114x114" href="http://placehold.it/114.png/000/fff">
    <!-- Standard iPad Touch Icon-->
    <link rel="apple-touch-icon" sizes="72x72" href="http://placehold.it/72.png/000/fff">
    <!-- Standard iPhone Touch Icon-->
    <link rel="apple-touch-icon" sizes="57x57" href="http://placehold.it/57.png/000/fff">

    <!-- Styles -->
    <link href="assets/fontAwesome/css/fontawesome-all.min.css" rel="stylesheet">
    <link href="assets/css/lib/themify-icons.css" rel="stylesheet">
    <link href="assets/css/lib/mmc-chat.css" rel="stylesheet" />
    <link href="assets/css/lib/sidebar.css" rel="stylesheet">
    <link href="assets/css/lib/bootstrap.min.css" rel="stylesheet">
    <link href="assets/css/lib/nixon.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="css/likeit.css"/>
    <script type="text/javascript" src="/templates/js/jquery-1.8.2.min.js"></script>


</head>



<body ng-app="myapp" ng-controller="mycontroller" ng-init="unitAll()">

<form action="list.html" method="post">
    <tr>
        <th colspan="10">
            <a href="/export.do">导出表格</a>
            产品编号:<input type="text" name="brand_id" placeholder="请输入产品编号">
            产品名称:<input type="text" name="mohu" placeholder="请输入产品名称">
            <input type="submit" value="查询">
        </th>
    </tr>
</form>

<table>

    <tr>
        <th>单位编号</th>
        <th>单位编码</th>
        <th>单位名称</th>
        <th>安装单位地址</th>
        <th>单位联系电话</th>
        <th>上月设备安装数量</th>
        <th>本月设备安装数量</th>
    </tr>
    <tr ng-repeat="T_installunit in unit">
        <td>{{T_installunit.anid}}</td>
        <td>{{T_installunit.dwcode}}</td>
        <td>{{T_installunit.dwname}}</td>
        <td>{{T_installunit.dwaddress}}</td>
        <td>{{T_installunit.dwTelephone}}</td>
        <td>{{T_installunit.lm_number}}</td>
        <td>{{T_installunit.tm_number}}</td>
    </tr>
    <tr>
        <td colspan="10">
            <button onclick="fenye(1)">首页</button>
            <button onclick="fenye(${pageUtil.prevPage})">上一页</button>
            <button onclick="fenye(${pageUtil.nextPage})">下一页</button>
            <button onclick="fenye(${pageUtil.totalPage})">尾页</button>
        </td>
    </tr>

</table>
<script>
    //建立模块
    var app=angular.module("myapp",[]);
    //创建控制器(两个参数)
    app.controller("mycontroller",function($scope,$http) {
        $scope.unitAll=function () {
            $http.get("unit.do").success(
                function (response) {
                    console.log(response);
                    $scope.unit=response;

                }
            )
        }
    });

    //分页
    function fenye(page){
        location.href="list?page="+page;
    }

</script>
</body>
</html>